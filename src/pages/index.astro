---
import Layout from "../layouts/Layout.astro";
import { playlists } from "../lib/data";
import PlayListItemCard from "../components/PlayListItemCard.astro";
import AnuncioItemCard from "../components/AnuncioItemCard.astro";
---

<Layout title="Spotify Clone CreativePanda">
  <div
    id="playlist-container"
    class="relative transition-all duration-1000 bg-green-900"
  >
    <div class="relative z-10 px-6 py-6">
      <div class="flex flex-wrap mt-6 gap-4">
        {playlists.map((playlist) => <AnuncioItemCard playlist={playlist} />)}
      </div>
    </div>
    <h4 class="font-semibold text-3xl pl-5 pt-5 font-white relative z-10">
      Hecho para ti
    </h4>
    <div class="relative z-10 px-6">
      <div class="flex flex-wrap mt-6 gap-4">
        {playlists.map((playlist) => <PlayListItemCard playlist={playlist} />)}
      </div>
    </div>
    <div
      class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80"
    >
    </div>
  </div>
</Layout>

