---
import SpotifyIcon from "../icons/Spotify.astro";
import HomeIcon from "../icons/Home.astro";
import SearchIcon from "../icons/Search.astro";
import HeaderMenuItem from "./HeaderMenuItem.astro";
---

<nav class="flex flex-row flex-1 gap-2 justify-between">
  <div class="bg-zinc-800 rounded-full p-2">
    <SpotifyIcon />
  </div>

  <div class="flex flex-row rounded-lg">
    <div class="bg-zinc-800 rounded-full p-2 mr-3">
      <div class="text-zinc-400 hover:text-zinc-200"><HomeIcon /></div>
    </div>

    <div class="flex gap-4 flex-row w-96 p-2 mr-3 bg-zinc-800 rounded-3xl">
      <HeaderMenuItem href="/#">
        <SearchIcon />
        <p class="text-white opacity-60 font-normal p-1">
          ¿Qué quieres reproducir?
        </p>
      </HeaderMenuItem>
    </div>
  </div>

  <div class="bg-zinc-800 rounded-full p-2">
    <img
      class="size-8 rounded-full"
      src="https://i.gifer.com/6vIk.gif"
      alt="Foto perfil"
    />
  </div>
</nav>
